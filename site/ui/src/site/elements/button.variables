@textColor: #333333;
@backgroundColor: #FAFAFA;

@backgroundImage: linear-gradient(rgba(255, 255, 255, 0.04), rgba(0, 0, 0, 0.04));
@boxShadow: 0 1px 3px rgba(0, 0, 0, 0.15);

@horizontalPadding: 1.8461em;
@verticalPadding: 1.0714em;

@coloredBoxShadow: @boxShadow;
@coloredBackgroundImage: @backgroundImage;

@invertedTextShadow: 0px 1px 1px rgba(0, 0, 0, 0.4);

@small: @12px;
@medium: @13px;
@large: @14px;
@big: @15px;
@huge: @16px;

